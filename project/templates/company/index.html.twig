{% extends 'base.html.twig' %}

{% block title %}Company Order{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Company Order</h1>
    <div class="errors" id="errors">
        {{ errors_text }}
    </div>
    <form method="post" id="company_form">
        <div>
            <label>Symbol</label>
        </div>
        <div>
            <input name="symbol" id="symbol" value="{{ symbol }}" required>
        </div>
        <div>
            <label>Start date</label>
        </div>
        <div>
            <input name="start_date" id="start_date" value="{{ start_date }}" required>
        </div>
        <div>
            <label>End date</label>
        </div>
        <div>
            <input name="end_date" id="end_date" value="{{ end_date }}" required>
        </div>
        <div>
            <label>Email</label>
        </div>
        <div>
            <input name="email" value="{{ email }}" type="email" required>
        </div>
        <div>
            <input name="submit" id="submit" value="Send" type="submit">
        </div>
        <input type="hidden" name="token" value="{{ csrf_token('company-order') }}"/>
    </form>
</div>
{% endblock %}
